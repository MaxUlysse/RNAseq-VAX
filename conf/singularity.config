
/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 *  Nextflow config file for use with Singularity
 * -------------------------------------------------
 * Defines basic usage limits and docker image id.
 * Imported under the default 'singularity' Nextflow
 * profile in nextflow.config
 * NOTE: Not suitable for production use, assumes
 * compute limits of only 16GB memory and 1 CPU core.
 */

singularity {
  enabled = true
}

params {
  	$rna_avc.container          = "${params.containerPath}/rna_avc${params.tag}.img"
  	$splitNCigarReads.container          = "${params.containerPath}/rna_avc${params.tag}.img"
	$haplotypeCaller.container          = "${params.containerPath}/rna_avc${params.tag}.img"
	$addReadGroups.container          = "${params.containerPath}/rna_avc${params.tag}.img"
	$varfiltering.container          = "${params.containerPath}/rna_avc${params.tag}.img"
	$selectvariants.container          = "${params.containerPath}/rna_avc${params.tag}.img"
	$allelespecificexpression.container          = "${params.containerPath}/rna_avc${params.tag}.img"
}

